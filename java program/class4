//wap take a +ve number from keyboard check no is 2 digit number
import java.util.*;
class Test
{
	public static void main(String arg[])
	{
	  Scanner sc=new Scanner(System.in);
	  System.out.println("enter a number  ");
	  int no=sc.nextInt();
	  if(no>9 &&no<100)
	       {
	          System.out.println("2 digit number ");
	       }
	  
	}
}



//wap take a number from keyboard check no is 2 digit number
import java.util.*;
class Test
{
	public static void main(String arg[])
	{
	  Scanner sc=new Scanner(System.in);
	  System.out.println("enter a number  ");
	  int no=sc.nextInt();
	  if(no<0)
	  {
	    no=-no;
	  }
	  if(no>9 &&no<100)
	       {
	          System.out.println("2 digit number ");
	       }
	  
	}
}



//wap take a char from keyboard check char is upper case

import java.util.*;
class Test
{
	public static void main(String arg[])
	{
	  Scanner sc=new Scanner(System.in);
	  System.out.println("enter a char  ");
	 char ch=sc.next().charAt(0);
	  if(ch>='A' && ch<='Z')
	       {
	          System.out.println("upper case  ");
	       }
	  
	}
}


or
import java.util.*;
class Test
{
	public static void main(String arg[])
	{
	  Scanner sc=new Scanner(System.in);
	  System.out.println("enter a char  ");
	 char ch=sc.next().charAt(0);
	 
	  if(ch>=65 && ch<=90)
	       {
	          System.out.println("upper case  ");
	       }
	  
	}
}



or
import java.util.*;
class Test
{
	public static void main(String arg[])
	{
	  Scanner sc=new Scanner(System.in);
	  System.out.println("enter a char  ");
	 char ch=sc.next().charAt(0);
	 
	  if(Character.isUpperCase(ch))
	       {
	          System.out.println("upper case  ");
	       }
	  
	}
}







//wap take a char from keyboard check char is upper case

import java.util.*;
class Test
{
	public static void main(String arg[])
	{
	  Scanner sc=new Scanner(System.in);
	  System.out.println("enter a char  ");
	 char ch=sc.next().charAt(0);
	  if(ch>='a' && ch<='z')
	       {
	          System.out.println("lower case  ");
	       }
	  
	}
}




//convert upper case to lower case

import java.util.*;
class Test
{
	public static void main(String arg[])
	{
	  Scanner sc=new Scanner(System.in);
	  System.out.println("enter a char  ");
	 char ch=sc.next().charAt(0);
	  if(ch>='A' && ch<='Z')
	       {
	          ch=(char)(ch+32);
	       }
	       System.out.println(ch);
	  
	}
}


A 65
B 66
Z 90
a 97
b 98
z 122

//conver to lower case to uppercase

import java.util.*;
class Test
{
	public static void main(String arg[])
	{
	  Scanner sc=new Scanner(System.in);
	  System.out.println("enter a char  ");
	 char ch=sc.next().charAt(0);
	  if(ch>='a' && ch<='z')
	       {
	          ch=(char)(ch-32);
	       }
	       System.out.println(ch);
	  
	}
}

