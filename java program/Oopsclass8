add two complex number using method
_____________________________________
import java.util.*;
class Complex
{
	
	private int r,i;
	Complex(int a,int b)
	{
		r=a;
		i=b;
	}
	static void add(Complex c1,Complex c2,Complex c3)
	{
		c3.r=c1.r+c2.r;
            c3.i=c1.i+c2.i;
	}
	void show()
	{
	     System.out.println(r+"+"+i+"i");	
	}

}

class Test
{
	
	public static void main(String arg[])
	{

	    Complex c1=new Complex(2,3);
	     Complex c2=new Complex(4,5);
            Complex c3=new Complex(0,0);
          // c3=c1+c2;  error   userdefined datatype add not possible   primtive(int,float,double) add possible 
            Complex.add(c1,c2,c3);
            c1.show();
             c2.show();
              c3.show();
          

	}
}


data is private 

import java.util.*;
class Complex
{
	
	private int r,i;
	Complex(int a,int b)
	{
		r=a;
		i=b;
	}
	static void add(Complex c1,Complex c2,Complex c3)
	{
		c3.r=c1.r+c2.r;
            c3.i=c1.i+c2.i;
	}
	void show()
	{
	     System.out.println(r+"+"+i+"i");	
	}

}

class Test
{
	
	public static void main(String arg[])
	{

	    Complex c1=new Complex(2,3);
	     Complex c2=new Complex(4,5);
            Complex c3=new Complex(0,0);
          // c3=c1+c2;  error   userdefined datatype add not possible   primtive(int,float,double) add possible 
            Complex.add(c1,c2,c3);
            c1.show();
             c2.show();
              c3.show();
          

