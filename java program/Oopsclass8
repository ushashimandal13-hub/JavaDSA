add two time object
_____________________
import java.util.*;
class Time
{
	int h,m,s;
	Time(int a,int b,int c)
	{
		h=a;
		m=b;
		s=c;
	}
	static void add(Time t1,Time t2,Time t3)
	{
		t3.h=t1.h+t2.h;
		t3.m=t1.m+t2.m;
		t3.s=t1.s+t2.s;
		if(t3.s>=60)
		{
			t3.s=t3.s%60;
			t3.m=t3.m+1;

		}
		if(t3.m>=60)
		{
			t3.m=t3.m%60;
			t3.h=t3.h+1;
		}
		if(t3.h>=12)
		{
			t3.h=t3.h/12;

		}
	}
	void show()
	{
		System.out.println(h+"."+m+"."+s);
	}

}
class Test
{
	public static void main(String arg[])
	{
	   Time t1=new Time(3,45,23);
	   Time t2=new Time(4,15,45);
	   Time t3=new Time(0,0,0);
	   Time.add(t1,t2,t3);
	   t1.show();
	   t2.show();
	   t3.show();


	} 
}

o/P;
3.45.23
4.15.45
8.1.8






import java.util.*;
class Time
{
	int h,m,s;
	Time(int a,int b,int c)
	{
		h=a;
		m=b;
		s=c;
	}
	static void add(Time t1,Time t2,Time t3)
	{
		/*
		t3.h=t1.h+t2.h;
		t3.m=t1.m+t2.m;
		t3.s=t1.s+t2.s;
		if(t3.s>=60)
		{
			t3.s=t3.s%60;
			t3.m=t3.m+1;

		}
		if(t3.m>=60)
		{
			t3.m=t3.m%60;
			t3.h=t3.h+1;
		}
		if(t3.h>=12)
		{
			t3.h=t3.h/12;

		}
		*/
		int totalSec = (t1.h * 3600 + t1.m * 60 + t1.s) + (t2.h * 3600 + t2.m * 60 + t2.s);
		t3.h = (totalSec / 3600) % 12;
		t3.m = (totalSec % 3600) / 60;
		t3.s = totalSec % 60;

	}
	void show()
	{
		System.out.println(h+"."+m+"."+s);
	}

}
class Test
{
	public static void main(String arg[])
	{
	   Time t1=new Time(3,45,23);
	   Time t2=new Time(4,15,45);
	   Time t3=new Time(0,0,0);
	   Time.add(t1,t2,t3);
	   t1.show();
	   t2.show();
	   t3.show();


	} 
}



