import java.util.*;
class Complex
{
	
	int r,i;
	Complex(int a,int b)
	{
		r=a;
		i=b;
	}
}

class Test
{
	
	public static void main(String arg[])
	{

	    Complex c1=new Complex(2,3);
	     Complex c2=new Complex(4,5);
            Complex c3=new Complex(0,0);
          // c3=c1+c2;  error   userdefined datatype add not possible   primtive(int,float,double) add possible 
            c3.r=c1.r+c2.r;
            c3.i=c1.i+c2.i;
            System.out.println(c1.r+"+"+c1.i+"i");
             System.out.println(c2.r+"+"+c2.i+"i");
              System.out.println(c3.r+"+"+c3.i+"i");
          

	}
}

