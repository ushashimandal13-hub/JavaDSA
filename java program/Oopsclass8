import java.util.*;
class A
{
	
	static Scanner show()
	{
		Scanner sc=new Scanner(System.in);
		return sc;
	}
}

class Test
{
	
	public static void main(String arg[])
	{

	     Scanner sc=A.show();
	     System.out.println("enter a number ");
	     int no=sc.nextInt();
	     System.out.println("value="+no);
          

	}
}
