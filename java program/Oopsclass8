class Test
{
	int a=10;
	int b=20;
	public static void main(String arg[])
	{
	    Test t=new Test();
	    System.out.println(t);
           Test t1=new Test();
           System.out.println(t1);
           //above line 2 object
           t1=t;  //assign object refernce
           //only one object  
	    System.out.println(t1);
	    System.out.println(t.a+" "+t.b); //10 20
	    System.out.println(t1.a+" "+t1.b);//10 20 
	    t.a=30;
	    t.b=40;
	    System.out.println(t.a+" "+t.b); //30 40
	    System.out.println(t1.a+" "+t1.b);//30 40 

	}
}
