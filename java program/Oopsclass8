import java.util.*;
class Demo
{
     int a,b;
     Demo(int x,int y)
     {
     	a=x;
     	b=y;
     }
     void show() //void show(final Demo this)
     {
        System.out.println(this);
     }
	
}

class Test
{
	
	public static void main(String arg[])
	{
            Demo ob=new Demo(10,20);
            System.out.println(ob);
            ob.show(); //internally ob.show(ob);

	    

	}
}





